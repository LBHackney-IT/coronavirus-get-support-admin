{% from 'lbh-button/macro.njk' import lbhButton %}
{% from "lbh-back-link/macro.njk" import lbhBackLink %}

{% from "partials/help-request-data-list.njk" import HelpRequestDataList %}

{% extends "../layouts/base.njk" %}

{% block content %}
    {{ lbhBackLink({
        "href": "/help-requests",
        "text": "Back"
    }) }}

    <h1 class="lbh-heading-h1">Callback list</h1>
    
    <h3 class="lbh-heading-h3">Filter by Help Type:</h3>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-quarter">
            <a href="/help-requests/callbacks" class="lbh-link">Show All</a>
        </div>
        <div class="govuk-grid-column-one-quarter">
            <a href="/help-requests/callbacks?HelpNeeded=Help%20Request" class="lbh-link">Help Request</a>
        </div>
        <div class="govuk-grid-column-one-quarter">
            <a href="/help-requests/callbacks?HelpNeeded=Shielding" class="lbh-link">Shielding</a>
        </div>
        <div class="govuk-grid-column-one-quarter">
            <a href="/help-requests/callbacks?HelpNeeded=Welfare%20Call" class="lbh-link">Welfare Call</a>
        </div>
    </div>

    {% if helpRequestsData | length %}
        <p class="lbh-body-m">Displaying {{helpRequestsData | length}} record(s)</p>

        {{ HelpRequestDataList(helpRequestsData) }}
        
    {% else %}
        <h3 class="lbh-heading-h3">No records found.</h3>
    {% endif %}
{% endblock %}